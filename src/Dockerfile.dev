# Development Dockerfile for ZavaStorefront
# Optimized for development with hot reload and debugging support

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS development
WORKDIR /src

# Install additional tools for development
RUN apt-get update && apt-get install -y \
    curl \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Copy solution and project files
COPY ZavaStorefront.sln .
COPY ZavaStorefront.csproj .

# Restore dependencies
RUN dotnet restore ZavaStorefront.csproj

# Copy source code
COPY . .

# Expose ports for development
EXPOSE 80
EXPOSE 443

# Set development environment
ENV ASPNETCORE_ENVIRONMENT=Development
ENV DOTNET_USE_POLLING_FILE_WATCHER=true
ENV ASPNETCORE_URLS=http://+:80

# Enable development certificates
RUN dotnet dev-certs https

# Start with hot reload
CMD ["dotnet", "watch", "run", "--urls", "http://+:80"]